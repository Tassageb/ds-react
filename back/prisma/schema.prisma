generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

model User {
    id  Int @id @default(autoincrement())
    name String
    password String
    posts Post[]
}

model Post {
    id Int @id @default(autoincrement())
    desc String
    user User @relation(fields: [userId], references: [id])
    userId Int
}